<style>
    *,
    *::after,
    *::before {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Roboto Slab', serif;
    }


    body {
        width: 100vw;
        height: 100vh;
        background-color: #2e3141;
        /* background-image: linear-gradient(rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0)); */
    }

    .username {
        font-size: 30px;
        text-transform: uppercase;
        font-weight: bolder;
        color: white;
        letter-spacing: 2px;
        text-shadow: 4px 3px black;
    }

    h3 {
        font-size: 16px;
        text-transform: capitalize;
        font-weight: bolder;
        color: white;
        letter-spacing: 2px;
        text-align: center;
        text-shadow: 2px 2px navy;
        margin-bottom: 50px;
    }

    .outer {
        height: 90vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .text_box1 {
        width: 30%;
        float: left;
        padding: 25px;
        box-shadow: 0 0 10px 0px white;
        border-radius: 20px;
    }

    form {
        width: 30%;
    }

    .sendjson {
        width: 350px;
        position: absolute;
        bottom: 250px;
        left: 20%;
        padding: 8px;
        background: transparent;
        border: 2px solid white;
        color: white;
        transition: 0.3s;
        width: 100px;
        border-radius: 10px;
        cursor: pointer;
    }

    .sendjson:hover {
        color: #2e3141;
        font-weight: bolder;
        background-color: rgba(255, 255, 255, 0.3);
    }

    .confirm_domain {
        width: 40%;
        transform: translateX(50%);
        cursor: pointer;
        padding: 10px 15px;
        border: 2px solid white;
        outline: none;
        background-color: transparent;
        margin-bottom: 0px;
        border-radius: 10px;
        color: white;
        transition: 0.3s;
    }

    .confirm_domain:hover {
        color: #2e3141;
        font-weight: bolder;
        background-color: rgba(255, 255, 255, 0.3);
    }

   
    @media screen and (max-width: 630px) {
        .text_box {
            width: 90%;
        }
    }


    .mainbutton {
        width: 40%;
        cursor: pointer;
        padding: 10px 15px;
        border: 2px solid white;
        outline: none;
        background-color: transparent;
        margin-bottom: 0px;

        border-radius: 10px;
        color: white;
        transition: 0.3s;
    }

    .mainbutton:hover {
        color: #2e3141;
        font-weight: bolder;
        background-color: rgba(255, 255, 255, 0.3);
    }


    .modal {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0);
        transition: 200ms ease-in-out;
        border: 1px solid black;
        border-radius: 10px;
        z-index: 10;
        background-color: white;
        width: 250px;
        max-width: 80%;
    }

    .modal.active {
        transform: translate(-50%, -50%) scale(1);
    }

    .modal-header {
        padding: 10px 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid black;
    }

    .modal-header .title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .modal-header .close-button {
        cursor: pointer;
        border: none;
        outline: none;
        background: none;
        font-size: 1.25rem;
        font-weight: bold;
    }

    .modal-body {
        padding: 10px 15px;
    }

    #overlay {
        position: fixed;
        opacity: 0;
        transition: 200ms ease-in-out;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, .5);
        pointer-events: none;
    }

    #overlay.active {
        opacity: 1;
        pointer-events: all;
    }

    select {
        cursor: pointer;
        margin-left: 60px;
        border: 1px solid lightgrey;
        padding: 5px 10px;
        outline: none;
        border-radius: 8px;
    }

    .logout {
        width: 125px;
        padding: 8px;
        position: absolute;
        right: 50px;
        top: 50px;
        background-color: transparent;
        border: 2px solid white;
        color: white;
        border-radius: 10px;
        cursor: pointer;
        transition: 0.3s;
    }

    .logout:hover {
        font-weight: bolder;
        color: #2e3141;
        background-color: rgba(255, 255, 255, 0.3);
    }

    .removable {
        background-color: rgba(255, 255, 255, 0.3);
        width: 40%;
        height: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 10px 27%;
        padding-left: 10px;
        color: white;
        font-weight: bolder;
    }

    .removable button {
        cursor: pointer;
        border: none;
        outline: none;
        margin-right: 10px;
        background-color: transparent;
    }

    .removable button:hover {
        cursor: pointer;
    }

    #success {
        color: greenyellow;
        font-weight: bolder;
    }

    #further {
        color: white;
        text-transform: uppercase;
        position: absolute;
        bottom: 30%;
        right: 10%;
        text-align: center;
        opacity: 0;
    }

    .proceed {
        text-decoration: none;
        text-transform: uppercase;
        color: #95a2ff;
        ;
        margin-left: 8px;
        font-weight: bolder;
        text-shadow: 4px 3px black;
    }

    .large {
        margin-right: 5px;
        font-size: large;
    }

    .fa-arrow-alt-circle-right {
        font-size: 25px;
        transition: 0.2s;
        color: lightblue;
    }

    .fa-arrow-alt-circle-right:active {
        transform: scale(0.9);
    }

    .fa-arrow-alt-circle-right:hover {
        color: orange;
    }

    /* *************NAVBAR STYLE **************/

    button {
        transition: 0.2s;
        cursor: pointer;
    }

    button:hover {
        font-weight: bolder;
    }

    .navbar {
        width: 100%;
        overflow: hidden;
        background-color: #4c5c96;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
    }

    .navbar a {
        float: left;
        font-size: 16px;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

    .dropdown {
        float: left;
        overflow: hidden;
        margin-right: 115px;
    }

    .dropdown .dropbtn {
        font-size: 16px;
        border: none;
        outline: none;
        color: white;
        background-color: inherit;
        font-family: inherit;
        display: flex;
        align-items: center;
    }

    .dropdown .dropbtn svg {
        margin-left: 5px;
    }


    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    .dropdown-content a {
        float: none;
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        text-align: left;
    }

    .dropdown-content a:hover {
        background-color: #ddd;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .mainbutton:active{
      transform:scale(0.95);
    }

    .confirm_domain:active{
      transform: translateX(50%) scale(0.95);
    }
    /******************responsive*****************/

    @media screen and (max-width:990px){

        .text_box1{
            width:50%;
        }

    }

    @media screen and (max-width:830px) {

        .dropdown{
            margin-right:50px;
        }

        .username{
            font-size: 25px;
        }

        .dropbtn{
            font-size: 13px !important;
        }

        .dropdown-content{
            min-width: 0;
        }

        .text_box1{
            width:70%;
        }
    }

    @media screen and (max-width:595px) {

        .navbar{
            padding:10px 5px 10px 10px;
        }

        .username{
            font-size: 14px;
        }

    .text_box1{
        width:80%;
    }

    .outer{
        height:75vh;
    }

    .dropdown{
        margin-right:0px;
    }

    .dropbtn{
        font-size: 13px !important;
    }

    .dropdown-content{
        min-width: 0;
    }

    .dropdown-content a {
        font-size: 11px;
        padding:10px 5px;
    }

    .removable{
        width:60%;
        margin:10px 24%;
    }
}

</style>