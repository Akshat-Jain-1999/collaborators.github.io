<style>
    *,
    *::after,
    *::before {
        margin:0;
        padding:0;
        box-sizing: border-box;
        font-family: 'Roboto Slab', serif;
    }


    body {
        height:100vh;
        background-color:#2e3141;
        /* background-image: linear-gradient(rgba(255,255,255,0.2),rgba(255,255,255,0)); */
    }

    .username{
            font-size:30px;
            text-transform: uppercase;
            font-weight: bolder;
            color: white;
            letter-spacing: 2px;
            text-shadow: 4px 3px black;
    }
    .main{
        width:100%;
        height:90%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .description{
        width:60%;
        height:60vh;
        max-height:60vh;
        background-color:#ddd ;
        text-align: center;
        padding:20px;
        box-shadow: 0 0 10px 10px #ddd;
        overflow:scroll;
        overflow-x: hidden;
    }
    span{
        color:navy;
    }

    ::-webkit-scrollbar{
     width:5px;
 }

 /* ::-webkit-scrollbar-thumb{
     background-color: navy;
 } */

    #pp{
        font-size: 18px;
        padding:10px;
        margin-top:10px;
        text-align: left;
    }

    .files{
        width:100%;
        color:black;
        margin:5px 5px 0 0; 
        text-decoration:none;
        transition:0.3s;
        display: flex;
        align-items: center;
    }
    .files:hover{
        font-weight: bolder;
        color:#4c5c96;
    }

    .files svg{
      transform:translate(5px,1px) !important;
      background-color:black ;
      padding: 5px;
      font-size: 25px;
      border-radius: 50%;
      color:#ddd;
      transition: 0.3s;
    }
    .files:hover svg{
      background-color: #4c5c96;
      color: #ddd;
    }
     /* *************NAVBAR STYLE **************/

     button{
            transition:0.2s;
            cursor: pointer;
        }
        button:hover{
            font-weight: bolder;
        }

        .navbar {
        width:100%;
        height:8vh;
        overflow: hidden;
        background-color: #4c5c96;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding:10px 20px;
}

.navbar a {
  float: left;
  font-size: 16px;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

.dropdown {
  float: left;
  overflow: hidden;
  margin-right: 115px;
}

.dropdown .dropbtn {
  font-size: 16px;  
  border: none;
  outline: none;
  color: white;
  background-color: inherit;
  font-family: inherit;
  display: flex;
  align-items: center;
}
.dropdown .dropbtn svg{
    margin-left:5px;
}


.dropdown-content {
  display: none;
  position: absolute;
  background-color: #f9f9f9;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdown-content a {
  float: none;
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
  text-align: left;
}

.dropdown-content a:hover {
  background-color: #ddd;
}

.dropdown:hover .dropdown-content {
  display: block;
}


input[type=submit]:focus{
      transform:scale(0.95);
    }
    input[type=file]:focus{
      transform:scale(0.95);
    }

    button:active{
      transform: scale(0.95);
    }

/**************RESPONSIVE*****************/

@media screen and (max-width:1120px) {
    .shift{
      left:5% !important;
    }
    .description{
        width:90%;
    }
}

@media screen and (max-width:670px) {
  .username{
    font-size: 25px;
  }
}

@media screen and (max-width:600px){

    .shift{
      top:10% !important;
      color:navy !important;
      font-size: 16px !important;
    }
    body{
      background-color:#ddd !important;
    }

    .navbar{
            padding:10px 5px 10px 10px;
            height:8vh;
        }

        .main{
          height:88vh;
        }
        .username{
            font-size: 14px;
        }

        .dropdown{
        margin-right:0px;
    }

    .dropbtn{
        font-size: 13px !important;
    }

    .dropdown-content{
        min-width: 0;
    }

    .dropdown-content a {
        font-size: 11px;
        padding:10px 5px;
    }

    .description{
      height:100%;
      width:100%;
      margin-top:50px;
      max-height:none;
    }
    .description h1{
      font-size: 25px;
    }
    #pp{
      font-size: 15px;
    }
    strong{
      font-size:16px;
    }
}
   
</style>