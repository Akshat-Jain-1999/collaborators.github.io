<style>
    *{
    margin:0;
    padding:0;
    box-sizing:border-box;
    font-family: 'Roboto Slab', serif;
    }

    body{
        background-color:#2e3141;
        /* background-image: linear-gradient(rgba(255,255,255,0.2),rgba(255,255,255,0)); */
    }

    .logout{
      padding:8px;
      position:absolute;
      right:100px;
      top:100px;
    }

    #resize{
      width:150px;
      height:150px;
      border: 2px solid grey;
      border-radius: 100%;
      overflow: hidden;
      margin:50px 50px 20px 50px;
    }

    .username{
      font-size:30px;
      text-transform: uppercase;
      font-weight: bolder;
      color: white;
      letter-spacing: 2px;
    text-shadow: 4px 3px black;
    }

    .menu{
      display:flex;
    }

    .side_content{
        width:30%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding:50px 0;
    }
    .content{
        color:white;
        width:70%;
        padding-top:30px;
        height:92vh;
        overflow: scroll;
        overflow-x: hidden;
        padding-bottom:50px;
    }
    .project_content{
        color:#2e3141;
        width:30%;
        height:220px;
        border:2px solid white;
        margin:10px;
        padding:8px 10px;
        float: left;
        overflow-wrap: break-word;
        overflow-y:scroll;
        background-color: #ddd;
        box-shadow:0 0 10px 2px #ddd;
    }

    .fa-arrow-alt-circle-right{
        font-size: 25px;
        transition: 0.2s;
        color:#4c5c96;
    }
    .fa-arrow-alt-circle-right:active{
        transform: scale(0.9);
    }
    .fa-arrow-alt-circle-right:hover{
        color:orange;
    }

    form{
      text-align: center;
      width:80%;
    }
    button,input[type=submit]{
      width:100px;
      padding:5px;
      margin:5px;
      cursor:pointer;
      background-color:transparent;
      border:2px solid white;
      border-radius:8px;
      color: white;
      transition:0.3s;
    }
    input{
      width:70%;
      padding:5px;
      margin:5px;
      border: none;
      outline:none;
    }
    input:focus{
      outline:none;
      border:none;
    }
    button:hover{
      color:#2e3141;
      font-weight: bolder;
      background-color:rgba(255,255,255,0.3);
    }

    input[type=search]{
        width:96%;
    }

    .project_content form{
      width:25%;
    }

    input[type=submit]:hover{
      color:#2e3141;
      font-weight: bolder;
      background-color:rgba(255,255,255,0.3);
    }
    input[type=file]{
      color:white;
      cursor:pointer;
      padding:5px;
    }
    span{
      color:white;
      text-transform: uppercase;
      font-weight: bolder;
    }
    .bg{
      position: absolute;
    width: 50%;
    height: 75%;
    background-color: transparent;
    z-index: -1;
    box-shadow: 0 0 20px 0px white;
    border-radius: 30px;
  }

 ::-webkit-scrollbar{
     width:5px;
 }

  /* *************NAVBAR STYLE **************/

  .navbar {
  width:100%;
  height:10%;
