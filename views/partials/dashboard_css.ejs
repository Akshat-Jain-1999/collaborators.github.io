    .project_content{
        width:40%;
    }
    .side_content{
        width:40%;
    }
    .content{
        width:60%;
        padding-left:5%;
    }
}
@media screen and (max-width:728px) {
    .project_content{
        width:90%;
    }
    .side_content{
        width:50%;
    }
    .content{
        padding-left:0;
        width:50%;
    }
    .username{
        font-size: 20px;
        text-shadow: 2px 2px black;
    }
    .dropdown{
        margin-right:50px;
    }
    h1{
        font-size: 20px;
    }
}

