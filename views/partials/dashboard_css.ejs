.project_content h2{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.deletebtn{
  border:none;
  font-size: 25px;
  width:50px;
  color:black;
  background-color: transparent;
  margin:0;
}
.deletebtn:hover{
  background-color: transparent;
}
.deletebtn:hover svg{
    color: red;
}


