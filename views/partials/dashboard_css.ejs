        width:100px;
        height:100px;
        margin:20px;
    }

    button,input[type=submit]{
        width:80px;
        font-size: 10px;
    }

    .dropdown{
        margin-right:0px;
    }
    
    .menu{
        display: block;
    }
    .content{
        width:90%;
        padding-left:10%;
    }
    .side_content{
        width: 100%;
        padding-bottom: 70px;
    }
    .project_content{
        width: 100%;
    }
    .content h2{
        font-size: 20px;
    }
    .content p{
        font-size: 13px;
    }
