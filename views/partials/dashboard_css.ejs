    .navbar{
        padding:10px 0px 10px 10px;
    }
    .username{
        font-size: smaller;
        text-shadow: 2px 2px black;
    }
    input[type=search]{
        width:95%;
    }

    .dropbtn{
        font-size: 13px !important;
    }

    .dropdown-content{
        min-width: 0;
    }

    .dropdown-content a {
        font-size: 11px;
        padding:10px 5px;
