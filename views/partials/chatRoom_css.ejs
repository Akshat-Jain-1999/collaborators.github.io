<style>
    *{
    margin:0;
    padding:0;
    box-sizing:border-box;
    font-family: 'Roboto Slab', serif;
    }

    body{
        background-color:#2e3141;
    }
    .main{
        height:92vh;
        width:100vw;
        display: flex;
    }
    /********NAVBAR STYLE***********/
    .navbar {
  width:100%;
  height:8vh;
  overflow: hidden;
  background-color: #4c5c96;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:10px 20px;
}

.navbar a {
  float: left;
  font-size: 16px;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

.dropdown {
  float: left;
  overflow: hidden;
  margin-right: 100px;
}

.dropdown .dropbtn {
  font-size: 16px;  
  border: none;
  outline: none;
  color: white;
  background-color: inherit;
  font-family: inherit;
  margin: 0;
  display: flex;
  align-items: center;
}

.dropdown .dropbtn svg{
    margin-left:5px;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: #f9f9f9;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdown-content a {
  float: none;
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
  text-align: left;
}

.dropdown-content a:hover {
  background-color: #ddd;
}

.dropdown:hover .dropdown-content {
  display: block;
}


.username{
      font-size:30px;
      text-transform: uppercase;
      font-weight: bolder;
      color: white;
      letter-spacing: 2px;
    text-shadow: 4px 3px black;
}

#room-container{
    background-color:#2e3141;
    width:30%;
    height:100%;
    border-right: 2px solid white;
}

::-webkit-scrollbar{
    width:0px;
}
.info{
    width:70%;
    height:90vh;
    background-color: #2e3141;
    text-align: center;
}

.wrap{
    height: 69vh;
    padding-bottom:50px;
    overflow-y: scroll;
}

.heading{
    color: #ddd;
    height:7vh;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding:10px;
    text-transform: uppercase;
    font-weight: lighter;
    border-bottom: 3px solid white;
}


.new{
    border-bottom: 0;
}


.new_room{
    text-align: center;
    border-bottom: 3px solid #ddd;
    padding-bottom: 20px;
}

input[type=text]{
    width:50%;
    padding:8px 15px;
    border-radius:25px;
    border: none;
    outline: none;
    font-size: 17px;
    background-color: #ddd;
}

button[type=submit]{
    width:20%;
    padding:9px 8px;
    border-radius:25px;
    border: 2px solid #ddd;
    outline: none;
    background-color: #ddd;
    color: #4c5c96;
    cursor:pointer;
    transition: 0.3s;
    font-weight: bolder;
}

button[type=submit]:hover{
    background-color: #4c5c96;
    color: #ddd;
    border: 2px solid #4c5c96;
}

.room_display{
    height:10vh;
    display:flex;
    justify-content: space-around;
    align-items: center;
    background-color: #ddd;
    border-bottom: 3px solid white;
    transition: 0.3s;
}

.room_display h3{
    text-transform: capitalize;
    color: #4c5c96;
}

.room_display:hover{
    background-color: rgba(255,255,255,0.7);
}

.join{
    text-decoration: none;
    border:2px solid #4c5c96;
    padding:5px 10px;
    display: flex;
    border-radius: 25px;
    background-color: #4c5c96;
    color: #ddd;
    font-weight: bolder;
    transition: 0.3s;
}
.join:hover{
    background-color: white;
    border: 2px solid white;
    color:#4c5c96;
}
.join svg{
    font-size: 20px;
    margin-left:5px;
}

.ml-0 svg{
    margin-left:0;
}

.isDisabled {
  cursor: not-allowed;
  opacity: 0.5;
  pointer-events: none;
}

.isDisabled:hover{
    color:black;
}

img{
    width:70%;
    margin:40px 0 40px 0;
    box-shadow: 0 0 10px 10px white;
    transition: 0.3s;
}

.img{
    position: relative;
}


.opt1{
    position:absolute;
    top:43%;
    left:50%;
    transform: translate(-50%,-50%);
    z-index: 1;
}

.opt2{
    position:absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    z-index: 1;
}

.info h2, p{
    color:#ddd;
}

.info p{
    display: flex;
    justify-content: center;
    align-items: center;
}

.info p svg{
    font-size: 20px;
    margin:0 5px;
}

/*********RESPONSIVE*********/

@media screen and (max-width:1200px){
    .img h1{
        font-size:20px !important;
    }
}
@media screen and (max-width:915px){
    .img h1{
        font-size:16px !important;
    }
}
@media screen and (max-width:850px){
    .img h1{
        font-size:16px !important;
    }
    #room-container{
        width:50%;
    }
    .info{
        width:50%;
        display:flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    .info h2{
        font-size:20px;
        padding:10px;
    }
    .info p{
        font-size:16px;
        margin:20px 0;
    }
}

@media screen and (max-width:650px) {
    .username{
        font-size:20px;
    }
    #room-container{
        width:100%;
    }
    .info{
        display: none;
    }
    .wrap{
        padding-bottom:0;
    }
    .dropdown{
        margin-right:50px;
    }
    
    .dropbtn{
        font-size: 16px !important;
    }

    .dropdown-content{
        min-width: 0;
    }

    .dropdown-content a {
        font-size: 14px;
        padding:10px;
    }
}
@media screen and (max-width:450px) {
    form{
        width:100%;
    }
    input[type=text]{
        width:60%;
    }
    button[type=submit]{
        width:30%;
    }
    .username{
        font-size:smaller;
    }
    .dropdown{
        margin-right:0px;
    }
    .dropbtn{
        font-size: 14px !important;
    }
    .dropdown-content a {
        font-size: 11px;
        padding:10px 5px;
    }
    #room-container{
        border: 0;
    }
}
</style>