      .fixed-side-navbar {
        position: fixed;
        top: 50%;
        right: 0;
        z-index: 99999;
        margin-top: -100px;
        text-align: right;
        padding: 30px 0;
        -webkit-transition: all 0.3s;
        transition: 0.3s;
      }
      .fixed-side-navbar:hover {
        background: transparent;
      }
      .fixed-side-navbar:hover .nav > li > a > span {
        color: rgb(100, 100, 100);
    	  font-weight: bold;
        display: block;
        background-color: #ddd;
        text-align: center;
        text-transform: uppercase;
        font-size: 14px;
