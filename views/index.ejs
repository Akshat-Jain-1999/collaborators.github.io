        color: black;
      }
      .fixed-side-navbar .nav > li a.active:after {
        -webkit-transform: scale(0.9);
        transform: scale(0.9);
      }
      .fixed-side-navbar .nav > li a.active:before {
        content: "";
        position: absolute;
        top: 50%;
        right: 17px;
        margin-top: -8px;
        width: 16px;
        height: 16px;
        background: transparent;
        border: 2px solid #fff;
        border-radius: 10px;
      }
      .nav > li {
        position: relative;
        display: block;
      }
      .fixed-side-navbar .nav > li a {
